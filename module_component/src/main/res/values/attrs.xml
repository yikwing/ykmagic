<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundedImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="isCircle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
    </declare-styleable>

    <declare-styleable name="StatusBarWrapperView">
        <attr name="extraTopPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BottomNavBarWrapperView">
        <attr name="extraBottomPadding" format="dimension" />
    </declare-styleable>

</resources>